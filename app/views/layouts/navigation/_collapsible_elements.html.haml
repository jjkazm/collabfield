              = current_user.name
            %span.caret

          %ul.dropdown-menu{role: "menu"}
            %li
              =link_to "PCEdit profile", edit_user_registration_path
            %li
              =link_to "PCLog out", destroy_user_session_path, method: :delete

        %li.mobile-menu
          = link_to  "MoBEdit profile", edit_user_registration_path
        %li.mobile-menu
          = link_to "MoBLog out", destroy_user_session_path, method: :delete
      - else
        %li.nav-item
          = link_to "Login", login_path, class: "nav-link"
